<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.gregorio.popularMovies">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".Data.StethoApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_film"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.gregorio.popularMovies.MainActivity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.gregorio.popularMovies.DetailActivity"
            android:label="@string/detail_activity"
            android:parentActivityName="com.example.gregorio.popularMovies.MainActivity.MainActivity"></activity>

        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value="com.example.gregorio.popularMovies.MainActivity.MainActivity" />
        <activity
            android:name="com.example.gregorio.popularMovies.SettingsActivity"
            android:label="@string/settings"
            android:parentActivityName="com.example.gregorio.popularMovies.MainActivity.MainActivity">
        </activity>
        <meta-data android:name="android.support.PARENT_ACTIVITY"
            android:value="com.example.gregorio.popularMovies.MainActivity.MainActivity" />

        <provider
            android:name="com.example.gregorio.popularMovies.Data.FavouriteFilmsProvider"
            android:authorities="com.example.gregorio.popularMovies"
            android:exported="false"
            android:grantUriPermissions="true" />

        <grant-uri-permission android:path="String" />
    </application>


</manifest>